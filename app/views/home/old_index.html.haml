-if current_user
  %section
    Current user: #{current_user.username}
    =link_to 'Logout', logout_path
  %section
    Search for app:
    %input{type: "text", id: "app-store-search"}
    %li#results
  %section
    %header Associated Apps:
    %li#apps
      =render partial: "app", collection: current_user.apps
  
-else
  Login with:
  =link_to 'Facebook', '/auth/facebook'
  =link_to 'Twitter', '/auth/twitter'
